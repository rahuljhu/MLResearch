{
  "model": {
    "module_path": "models.encoder_decoder",
    "class_name": "EncoderDecoderModel",
    "params": {
      "vocab_size": 50000,
      "d_model": 512,
      "num_layers": 6,
      "num_heads": 8,
      "d_ff": 2048,
      "dropout": 0.1,
      "device": "auto"
    }
  },
  "data": {
    "file_path": "data/translation_data.json",
    "format": "auto",
    "batch_size": 8,
    "shuffle": true,
    "num_workers": 0
  },
  "training": {
    "epochs": 15,
    "learning_rate": 5e-5,
    "optimizer": "Adam",
    "optimizer_params": {
      "weight_decay": 1e-5,
      "betas": [0.9, 0.98]
    },
    "loss_function": "CrossEntropyLoss",
    "loss_params": {
      "ignore_index": 0
    },
    "device": "auto",
    "checkpoint_path": "checkpoints/encoder_decoder_model.pt",
    "save_interval": 3
  }
}